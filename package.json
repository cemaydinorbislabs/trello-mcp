{
  "name": "trello-mcp",
  "version": "1.0.0",
  "description": "Trello MCP Server - Model Context Protocol integration for Trello",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:trello": "tsx src/trello/test-client.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
