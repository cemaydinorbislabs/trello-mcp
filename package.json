  "keywords": [
    "trello",
    "mcp",
    "model-context-protocol",
    "ai",
    "automation"
  ],
  "author": "OrbisLabs.ai",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "zod": "^3.22.4",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0"
